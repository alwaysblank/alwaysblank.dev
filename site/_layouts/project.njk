---
layout: app.njk
---
{% extends "body.njk" %}

{% block header %}
  <header class="text-center">
    {% include "partials/header.njk" %}
    <a href="/projects/" class="text-xs">< Projects</a>
  </header>
{% endblock %}

{% block main %}
<aside class="prose text-sm border p-4 border-gray-300 w-full my-8 md:my-10">
 {% if attributes.length > 0 %}
  <dl>
  {% for item in attributes %}
   <div class="flex">
   <dt class="font-bold pr-4">{{ item.label }}</dt>
   <dd>{{ item.content }}</dd>
   </div>
  {% endfor %}
  </dl>
  {% endif %}
  
 {% if links.length > 0 %}
   <ul>
    {% for link in links %}
      <li><a href="{{ link.url }}">{{ link.label }}</a></li>
    {% endfor %}
   </ul>
 {% endif %}
</aside>

<div class="prose">
 {{ content | safe }}
</div>
{% endblock %}
